<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="timeImagesView">
        <item name="android:layout_width">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CategoryTitle">
        <item name="android:layout_marginVertical">5sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginHorizontal">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="paddingStart">6sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
    </style>

    <style name="CategoryContent">
        <item name="android:layout_marginVertical">2sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CategoryConstraintLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>

    </style>

    <style name="CategoryLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ContactIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_weight">0.1</item>
    </style>
    <style name="ContactText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">0.9</item>
    </style>

    <style name="SocialIcon">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ExpandableSymbol">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:src">@drawable/expand_more</item>
    </style>

    <style name="ShapeAppearance_CircularBorder">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="check_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:checked">true</item>
        <item name="android:textOn">✓</item>
        <item name="android:textOff">✕</item>
    </style>

    <style name="check_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">start</item>
    </style>
</resources>